<p id="notice"><%= notice %></p>

<h1>Order Groups</h1>

<table>
  <thead>
    <tr>
      <th>Order date</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @order_groups.each do |order_group| %>
      <tr>
        <td><%= order_group.order_date %></td>
        <td><%= order_group.user %></td>
        <td><%= link_to 'Show', order_group %></td>
        <td><%= link_to 'Edit', edit_order_group_path(order_group) %></td>
        <td><%= link_to 'Destroy', order_group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

