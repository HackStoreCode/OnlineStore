<%= simple_form_for(@payment) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :payment_date %>
    <%= f.input :description %>
    <%= f.input :total_amount %>
    <%= f.association :ordergroup %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
